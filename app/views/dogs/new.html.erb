<h1>Add a dog</h1>
<div class="container_newdog">
  <%= simple_form_for [@user, @dog] do |f| %>
  <%= f.input :name, input_html: { maxlength: 20 }, placeholder: "Maximum 20 characters" %>
  <%= f.input :address,
  input_html: {data: {address_autocomplete_target: "address"}, class: 'd-none'},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.input :description, input_html: { maxlength: 100 }, placeholder: "Maximum 100 characters" %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Add dog profile", class:'btn' %> |
  <%= link_to "Back", dogs_path, class: 'btn' %>
  <% end %>
</div>
