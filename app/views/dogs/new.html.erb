<div class="container">
  <h1>Add a dog</h1>

  <%= simple_form_for [@user, @dog] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class:'btn' %>
  <% end %>

  <%= link_to "Back", dogs_path, class: 'btn' %>

</div>
