<div class="container">

  <h1>Edit Dog Profile</h1>

  <%= simple_form_for [@user, @dog] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class:'btn' %> |
  <%= link_to 'Show', @dog, class: 'btn' %> |
  <%= link_to 'Back', dogs_path, class: 'btn' %>
  <% end %>


</div>
