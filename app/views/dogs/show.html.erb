<div class="container_show">
  <div class="card_show">
      <h1><%= @dog.name %></h1>
      <div class = "address">
      <p><h5>Address: </h5> <%= @dog.address %></p>
      </div>
      <p><h5>Description</h5> <%= @dog.description %></p>
      <div class="owner">
      <p><h5>Owner: </h5> <%= @dog.user.first_name %></p>
      </div>

      <div>
        <%= link_to "Book a walk", new_dog_booking_path(@dog), class: 'btn' %> |
        <% if @dog.user_id == current_user.id %>
          <%= link_to "Edit", edit_dog_path(@dog), class: 'btn' %> |
          <%= link_to "Delete",
              dog_path(@dog), class: 'btn',
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% end %>
        <% if @dog.bookings.where(user_id: current_user.id).exists? %>
           <%= link_to "Rate", new_dog_review_path(@dog), class: 'btn' %>
        <% end %>
        <br>

      </div>
      <div class="map">
        <div style="width: 100%; height: 200px;"
          data-controller="map"
          data-map-marker-value="<%= @marker.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

          <br>
          <div
</div>







          <%= link_to "Back", dogs_path, class: 'btn' %>
      </div>
  </div>
  <div class="card_show">
      <div>
      <hr>
      <div class="div">
      <% @dog.reviews.each do |review| %>
      <p id="rating-text">
      <%= review.rating %> <i class="fa-solid fa-star"></i>
      <%= review.comment %> by <%= review.user.first_name %> <%= cl_image_tag current_user.photo.key, class: "avatar", alt: "dropdown menu" %>
      </p>
      <% end %>
      </div>
  </div>



    <% if @dog.photo.attached?  %>
      <%= cl_image_tag @dog.photo.key , alt: 'dog', class: "img_show" %>
      <% else %>
      <%= image_tag "defaultimage.png",  alt: 'dog', class: "img_show" %>
      <% end %>
       <div class="div">
        <% @dog.reviews.each do |review| %>
