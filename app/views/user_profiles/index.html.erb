<div class="box">

  <h1>My Bookings</h1>
  <% current_user.bookings.each do |booking| %>
      <%= link_to dog_path(booking.dog) do %>
    <div class="card-box">
      <div class="text">
        <h5><%= booking.dog.name %></h5>
        <br>
        <h6><strong>Date: </strong><%= booking.date %></h6>
        <br>
        <h6><strong>Pick up & Drop off: </strong><%= booking.dog.address %></h6>
      </div>
        <div id="img-dog">
        <% if booking.dog.photo.attached? %>
        <%= cl_image_tag booking.dog.photo.key, crop: :fill %>
        <% else %>
        <%= image_tag "defaultimage.png" , crop: :fill%>
        <% end %>
        </div>
    </div>
        <% end %>

      <% end %>

</div>
